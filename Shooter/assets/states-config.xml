<?xml version="1.0" ?>
<STATES>
    <MENU>
        <TEXTURES>
            <texture filename="assets/button_play.png" ID="playbutton"/>
            <texture filename="assets/button_exit.png" ID="exitbutton"/>
        </TEXTURES>

        <OBJECTS>
            <object type="MenuButton" x="300" y="150" width="200" height="100" textureID="playbutton" numFrames="2" callbackID="1"/>
            <object type="MenuButton" x="300" y="350" width="200" height="100" textureID="exitbutton" numFrames="2" callbackID="2"/>
        </OBJECTS>
    </MENU>

    <PLAY>
        <TEXTURES>
            <texture filename="assets/projectile1.png" ID="bullet1"/> <!-- pocisk gracza -->
            <texture filename="assets/helicopter.png" ID="helicopter"/>
            <texture filename="assets/helicopter2.png" ID="helicopter2"/>
        </TEXTURES>

        <OBJECTS>
            <object type="Player" x="100" y="100" width="128" height="55" textureID="helicopter" numFrames="5"/>
            <object type="Enemy" x="500" y="100" width="128" height="55" textureID="helicopter2" numFrames="5"/>
        </OBJECTS>
    </PLAY>

    <PAUSE>
        <TEXTURES>
            <texture filename="assets/button_resume.png" ID="resumebutton"/>
            <texture filename="assets/button_main_menu.png" ID="mainbutton"/>
        </TEXTURES>

        <OBJECTS>
            <object type="MenuButton" x="300" y="150" width="200" height="100" textureID="mainbutton" numFrames="2" callbackID="1"/>
            <object type="MenuButton" x="300" y="300" width="200" height="100" textureID="resumebutton" numFrames="2" callbackID="2"/>
        </OBJECTS>
    </PAUSE>

    <GAMEOVER>
        <TEXTURES>
            <texture filename="assets/label_gameover.png" ID="gameovertext"/>
            <texture filename="assets/button_main_menu.png" ID="mainbutton"/>
            <texture filename="assets/button_restart.png" ID="restartbutton"/>
        </TEXTURES>

        <OBJECTS>
            <object type="AnimatedGraphic" x="300" y="60" width="200" height="100" textureID="gameovertext" numFrames="2" animSpeed="2"/>
            <object type="MenuButton" x="300" y="250" width="200" height="100" textureID="mainbutton" numFrames="2" callbackID="1"/>
            <object type="MenuButton" x="300" y="400" width="200" height="100" textureID="restartbutton" numFrames="2" callbackID="2"/>
        </OBJECTS>
    </GAMEOVER>
</STATES>
